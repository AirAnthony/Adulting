<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".PersonalSkillsStartActivity"
    android:gravity="center_horizontal"
    android:orientation="vertical">

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Personal Skills Quiz"
        android:textSize="30sp"
        android:layout_marginTop="80dp"/>

    <Button
        android:id="@+id/allPersonalSkills"
        android:layout_width="180dp"
        android:layout_height="50dp"
        android:text="ALL"
        android:layout_marginTop="100dp"
        android:onClick="startQuiz"/>

    <Button
        android:id="@+id/time"
        android:layout_width="180dp"
        android:layout_height="wrap_content"
        android:layout_marginTop="10dp"
        android:onClick="startQuiz"
        android:text="Random Questions #1" />

    <Button
        android:id="@+id/cooking"
        android:layout_width="180dp"
        android:layout_height="wrap_content"
        android:layout_marginTop="10dp"
        android:onClick="startQuiz"
        android:text="Random Questions #2" />

    <Button
        android:id="@+id/relationship"
        android:layout_width="180dp"
        android:layout_height="wrap_content"
        android:layout_marginTop="10dp"
        android:onClick="startQuiz"
        android:text="Random Questions #3" />

</LinearLayout>