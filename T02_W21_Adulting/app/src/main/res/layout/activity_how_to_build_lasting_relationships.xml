<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:id="@+id/layoutForHowToBuildLastingRelationships"
    tools:context=".HowToBuildLastingRelationships">

    <ScrollView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent">

        <LinearLayout
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:orientation="vertical">

            <androidx.constraintlayout.widget.ConstraintLayout
                android:id="@+id/constraintLayout"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content">

                <ImageView
                    android:id="@+id/imageView12"
                    android:layout_width="62dp"
                    android:layout_height="53dp"
                    android:layout_marginTop="192dp"
                    app:layout_constraintEnd_toEndOf="parent"
                    app:layout_constraintHorizontal_bias="0.232"
                    app:layout_constraintStart_toStartOf="parent"
                    app:layout_constraintTop_toTopOf="parent"
                    app:srcCompat="@drawable/personalsymbol" />

                <ImageView
                    android:id="@+id/imageView11"
                    android:layout_width="165dp"
                    android:layout_height="150dp"
                    app:layout_constraintBottom_toTopOf="@+id/imageView12"
                    app:layout_constraintEnd_toEndOf="parent"
                    app:layout_constraintHorizontal_bias="0.491"
                    app:layout_constraintStart_toStartOf="parent"
                    app:layout_constraintTop_toTopOf="parent"
                    app:srcCompat="@drawable/companylogo3" />

                <TextView
                    android:id="@+id/textView2"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="20dp"
                    android:layout_marginBottom="33dp"
                    android:fontFamily="@font/cantata_one"
                    android:text="Personal Skills"
                    android:textColor="#121111"
                    android:textSize="24sp"
                    android:textStyle="bold"
                    app:layout_constraintBottom_toBottomOf="parent"
                    app:layout_constraintEnd_toEndOf="parent"
                    app:layout_constraintHorizontal_bias="0.0"
                    app:layout_constraintStart_toEndOf="@+id/imageView12"
                    app:layout_constraintTop_toBottomOf="@+id/imageView11"
                    app:layout_constraintVertical_bias="0.009" />

                <TextView
                    android:id="@+id/textView3"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginStart="41dp"
                    android:layout_marginLeft="41dp"
                    android:layout_marginTop="8dp"
                    android:layout_marginBottom="6dp"
                    android:fontFamily="@font/cantata_one"
                    android:text="How to Build Lasting Relationships"
                    android:textColor="#0E0E0E"
                    android:textSize="20sp"
                    android:textStyle="bold"
                    app:layout_constraintBottom_toBottomOf="parent"
                    app:layout_constraintEnd_toEndOf="parent"
                    app:layout_constraintHorizontal_bias="1.0"
                    app:layout_constraintStart_toStartOf="parent"
                    app:layout_constraintTop_toBottomOf="@+id/textView2"
                    app:layout_constraintVertical_bias="0.021" />

                <TextView
                    android:id="@+id/personalSkillsText1"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:fontFamily="@font/cantata_one"
                    android:text="When it comes to building and maintaining lasting relationships, there are important rules to follow.  Whether it's with romantic partners, family, or friends, the following steps will help you avoid disconnection and make your relationships flourish!"
                    android:textColor="#0E0E0E"
                    android:textSize="18sp"
                    android:textStyle="bold"
                    app:layout_constraintBottom_toBottomOf="parent"
                    app:layout_constraintEnd_toEndOf="parent"
                    app:layout_constraintHorizontal_bias="0.498"
                    app:layout_constraintStart_toStartOf="parent"
                    app:layout_constraintTop_toBottomOf="@+id/textView3"
                    app:layout_constraintVertical_bias="0.026" />

                <ImageView
                    android:id="@+id/imageView13"
                    android:layout_width="572dp"
                    android:layout_height="237dp"
                    android:layout_marginTop="16dp"
                    app:layout_constraintBottom_toBottomOf="parent"
                    app:layout_constraintEnd_toEndOf="parent"
                    app:layout_constraintHorizontal_bias="0.503"
                    app:layout_constraintStart_toStartOf="parent"
                    app:layout_constraintTop_toBottomOf="@+id/personalSkillsText1"
                    app:layout_constraintVertical_bias="0.0"
                    app:srcCompat="@drawable/relationship1" />

                <TextView
                    android:id="@+id/personalSkillsText2"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="20dp"
                    android:fontFamily="@font/cantata_one"
                    android:text="1. Be honest.  It's better to face the truth and address it, rather than let it sabotage your relationship in the long run."
                    android:textColor="#0E0E0E"
                    android:textSize="18sp"
                    android:textStyle="bold"
                    app:layout_constraintBottom_toBottomOf="parent"
                    app:layout_constraintEnd_toEndOf="parent"
                    app:layout_constraintHorizontal_bias="0.498"
                    app:layout_constraintStart_toStartOf="parent"
                    app:layout_constraintTop_toBottomOf="@+id/imageView13"
                    app:layout_constraintVertical_bias="0.0" />

                <TextView
                    android:id="@+id/personalSkillsText3"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="24dp"
                    android:fontFamily="@font/cantata_one"
                    android:text="2. Be open.  Be open and willing to share with people who are close in your life about your feelings, thoughts, and what's going on with you.  Be your authentic self."
                    android:textColor="#070707"
                    android:textSize="18sp"
                    android:textStyle="bold"
                    app:layout_constraintBottom_toBottomOf="parent"
                    app:layout_constraintEnd_toEndOf="parent"
                    app:layout_constraintHorizontal_bias="0.501"
                    app:layout_constraintStart_toStartOf="parent"
                    app:layout_constraintTop_toBottomOf="@+id/personalSkillsText2"
                    app:layout_constraintVertical_bias="0.0" />

                <ImageView
                    android:id="@+id/imageView15"
                    android:layout_width="462dp"
                    android:layout_height="264dp"
                    android:layout_marginTop="12dp"
                    app:layout_constraintEnd_toEndOf="parent"
                    app:layout_constraintHorizontal_bias="0.509"
                    app:layout_constraintStart_toStartOf="parent"
                    app:layout_constraintTop_toBottomOf="@+id/personalSkillsText3"
                    app:srcCompat="@drawable/relationship2" />

                <TextView
                    android:id="@+id/personalSkillsText4"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="8dp"
                    android:fontFamily="@font/cantata_one"
                    android:text="3. Check in on your relationships.  See how the people you care about are doing, and show that you care!"
                    android:textColor="#0E0E0E"
                    android:textSize="18sp"
                    android:textStyle="bold"
                    app:layout_constraintBottom_toBottomOf="parent"
                    app:layout_constraintEnd_toEndOf="parent"
                    app:layout_constraintHorizontal_bias="0.498"
                    app:layout_constraintStart_toStartOf="parent"
                    app:layout_constraintTop_toBottomOf="@+id/imageView15"
                    app:layout_constraintVertical_bias="0.0" />

                <TextView
                    android:id="@+id/personalSkillsText5"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="24dp"
                    android:fontFamily="@font/cantata_one"
                    android:text="4. Trust others.  Keep a personal evaluation of your relationship's level of trust in the back of your mind.  If you trust them, they can trust you."
                    android:textColor="#0C0C0C"
                    android:textSize="18sp"
                    android:textStyle="bold"
                    app:layout_constraintEnd_toEndOf="parent"
                    app:layout_constraintHorizontal_bias="0.521"
                    app:layout_constraintStart_toStartOf="parent"
                    app:layout_constraintTop_toBottomOf="@id/personalSkillsText4" />

                <ImageView
                    android:id="@+id/imageView16"
                    android:layout_width="448dp"
                    android:layout_height="353dp"
                    android:layout_marginTop="24dp"
                    app:layout_constraintEnd_toEndOf="parent"
                    app:layout_constraintHorizontal_bias="0.702"
                    app:layout_constraintStart_toStartOf="parent"
                    app:layout_constraintTop_toBottomOf="@+id/personalSkillsText5"
                    app:srcCompat="@drawable/relationship3" />

                <TextView
                    android:id="@+id/personalSkillsText6"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:fontFamily="@font/cantata_one"
                    android:text="5. Respect boundaries and privacy.  Don't be pushy, and respect privacy to build trust."
                    android:textColor="#100F0F"
                    android:textSize="18sp"
                    android:textStyle="bold"
                    app:layout_constraintEnd_toEndOf="parent"
                    app:layout_constraintStart_toStartOf="parent"
                    app:layout_constraintTop_toBottomOf="@+id/imageView16" />

                <TextView
                    android:id="@+id/personalSkillsText7"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="16dp"
                    android:fontFamily="@font/cantata_one"
                    android:text="6. Have healthy conflict.  When a conflict does arise, highlight how much you care about the other person and the relationship, and avoid placing blame."
                    android:textColor="#0C0C0C"
                    android:textSize="18sp"
                    android:textStyle="bold"
                    app:layout_constraintEnd_toEndOf="parent"
                    app:layout_constraintHorizontal_bias="0.507"
                    app:layout_constraintStart_toStartOf="parent"
                    app:layout_constraintTop_toBottomOf="@id/personalSkillsText6" />

                <TextView
                    android:id="@+id/personalSkillsText8"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="16dp"
                    android:fontFamily="@font/cantata_one"
                    android:text="7. Compromise.  Understand other people's perspective, thoughts, and feelings."
                    android:textColor="#100F0F"
                    android:textSize="18sp"
                    android:textStyle="bold"
                    app:layout_constraintEnd_toEndOf="parent"
                    app:layout_constraintStart_toStartOf="parent"
                    app:layout_constraintTop_toBottomOf="@id/personalSkillsText7" />

                <TextView
                    android:id="@+id/relationshipText1"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="16dp"
                    android:fontFamily="@font/cantata_one"
                    android:text="Complete the quiz to see if you can identify whether the concept shown will build a lasting relationship!  For each concept, press YES if the concept will build, or NO if the concept will harm relationships.  Good luck!"
                    android:textColor="#100F0F"
                    android:textSize="18sp"
                    android:textStyle="bold"
                    android:gravity="center"
                    app:layout_constraintEnd_toEndOf="parent"
                    app:layout_constraintStart_toStartOf="parent"
                    app:layout_constraintTop_toBottomOf="@id/personalSkillsText8" />

                <TextView
                    android:id="@+id/question1"
                    android:layout_width="331dp"
                    android:layout_height="0dp"
                    android:layout_marginStart="47dp"
                    android:layout_marginLeft="47dp"
                    android:layout_marginTop="16dp"
                    android:layout_marginEnd="33dp"
                    android:layout_marginRight="33dp"
                    android:fontFamily="@font/cantata_one"
                    android:gravity="center"
                    android:text="Balanced giving and recieving"
                    android:textColor="#100F0F"
                    android:textSize="18sp"
                    android:textStyle="bold"
                    app:layout_constraintEnd_toEndOf="parent"
                    app:layout_constraintStart_toStartOf="parent"
                    app:layout_constraintTop_toBottomOf="@id/relationshipText1" />

                <Button
                    android:id="@+id/yes1"
                    android:layout_width="121dp"
                    android:layout_height="39dp"
                    android:layout_marginStart="56dp"
                    android:layout_marginLeft="56dp"
                    android:layout_marginTop="20dp"
                    android:gravity="center"
                    android:text="YES"
                    app:layout_constraintStart_toStartOf="parent"
                    app:layout_constraintTop_toBottomOf="@id/question1" />

                <Button
                    android:id="@+id/no1"
                    android:layout_width="121dp"
                    android:layout_height="39dp"
                    android:layout_marginTop="20dp"
                    android:layout_marginEnd="72dp"
                    android:layout_marginRight="72dp"
                    android:gravity="center"
                    android:text="NO"
                    app:layout_constraintEnd_toEndOf="parent"
                    app:layout_constraintTop_toBottomOf="@id/question1" />

                <TextView
                    android:id="@+id/question2"
                    android:layout_width="331dp"
                    android:layout_height="0dp"
                    android:layout_marginStart="47dp"
                    android:layout_marginLeft="47dp"
                    android:layout_marginTop="16dp"
                    android:layout_marginEnd="33dp"
                    android:layout_marginRight="33dp"
                    android:fontFamily="@font/cantata_one"
                    android:gravity="center"
                    android:text="Lying to Others"
                    android:textColor="#100F0F"
                    android:textSize="18sp"
                    android:textStyle="bold"
                    app:layout_constraintEnd_toEndOf="parent"
                    app:layout_constraintStart_toStartOf="parent"
                    app:layout_constraintTop_toBottomOf="@id/no1" />

                <Button
                    android:id="@+id/yes2"
                    android:layout_width="121dp"
                    android:layout_height="39dp"
                    android:layout_marginStart="56dp"
                    android:layout_marginLeft="56dp"
                    android:layout_marginTop="20dp"
                    android:gravity="center"
                    android:text="YES"
                    app:layout_constraintStart_toStartOf="parent"
                    app:layout_constraintTop_toBottomOf="@id/question2" />

                <Button
                    android:id="@+id/no2"
                    android:layout_width="121dp"
                    android:layout_height="39dp"
                    android:layout_marginTop="20dp"
                    android:layout_marginEnd="72dp"
                    android:layout_marginRight="72dp"
                    android:gravity="center"
                    android:text="NO"
                    app:layout_constraintEnd_toEndOf="parent"
                    app:layout_constraintTop_toBottomOf="@id/question2" />

                <TextView
                    android:id="@+id/question3"
                    android:layout_width="331dp"
                    android:layout_height="0dp"
                    android:layout_marginStart="47dp"
                    android:layout_marginLeft="47dp"
                    android:layout_marginTop="16dp"
                    android:layout_marginEnd="33dp"
                    android:layout_marginRight="33dp"
                    android:fontFamily="@font/cantata_one"
                    android:gravity="center"
                    android:text="Placing Blame on Others"
                    android:textColor="#100F0F"
                    android:textSize="18sp"
                    android:textStyle="bold"
                    app:layout_constraintEnd_toEndOf="parent"
                    app:layout_constraintStart_toStartOf="parent"
                    app:layout_constraintTop_toBottomOf="@id/no2" />

                <Button
                    android:id="@+id/yes3"
                    android:layout_width="121dp"
                    android:layout_height="39dp"
                    android:layout_marginStart="56dp"
                    android:layout_marginLeft="56dp"
                    android:layout_marginTop="20dp"
                    android:gravity="center"
                    android:text="YES"
                    app:layout_constraintStart_toStartOf="parent"
                    app:layout_constraintTop_toBottomOf="@id/question3" />

                <Button
                    android:id="@+id/no3"
                    android:layout_width="121dp"
                    android:layout_height="39dp"
                    android:layout_marginTop="20dp"
                    android:layout_marginEnd="72dp"
                    android:layout_marginRight="72dp"
                    android:gravity="center"
                    android:text="NO"
                    app:layout_constraintEnd_toEndOf="parent"
                    app:layout_constraintTop_toBottomOf="@id/question3" />

                <TextView
                    android:id="@+id/question4"
                    android:layout_width="331dp"
                    android:layout_height="0dp"
                    android:layout_marginStart="47dp"
                    android:layout_marginLeft="47dp"
                    android:layout_marginTop="16dp"
                    android:layout_marginEnd="33dp"
                    android:layout_marginRight="33dp"
                    android:fontFamily="@font/cantata_one"
                    android:gravity="center"
                    android:text="Negotiating and Compromising"
                    android:textColor="#100F0F"
                    android:textSize="18sp"
                    android:textStyle="bold"
                    app:layout_constraintEnd_toEndOf="parent"
                    app:layout_constraintStart_toStartOf="parent"
                    app:layout_constraintTop_toBottomOf="@id/no3" />

                <Button
                    android:id="@+id/yes4"
                    android:layout_width="121dp"
                    android:layout_height="39dp"
                    android:layout_marginStart="56dp"
                    android:layout_marginLeft="56dp"
                    android:layout_marginTop="20dp"
                    android:gravity="center"
                    android:text="YES"
                    app:layout_constraintStart_toStartOf="parent"
                    app:layout_constraintTop_toBottomOf="@id/question4" />

                <Button
                    android:id="@+id/no4"
                    android:layout_width="121dp"
                    android:layout_height="39dp"
                    android:layout_marginTop="20dp"
                    android:layout_marginEnd="72dp"
                    android:layout_marginRight="72dp"
                    android:gravity="center"
                    android:text="NO"
                    app:layout_constraintEnd_toEndOf="parent"
                    app:layout_constraintTop_toBottomOf="@id/question4" />

                <TextView
                    android:id="@+id/question5"
                    android:layout_width="331dp"
                    android:layout_height="0dp"
                    android:layout_marginStart="47dp"
                    android:layout_marginLeft="47dp"
                    android:layout_marginTop="16dp"
                    android:layout_marginEnd="33dp"
                    android:layout_marginRight="33dp"
                    android:fontFamily="@font/cantata_one"
                    android:gravity="center"
                    android:text="Apologizing when Wrong"
                    android:textColor="#100F0F"
                    android:textSize="18sp"
                    android:textStyle="bold"
                    app:layout_constraintEnd_toEndOf="parent"
                    app:layout_constraintStart_toStartOf="parent"
                    app:layout_constraintTop_toBottomOf="@id/no4" />

                <Button
                    android:id="@+id/yes5"
                    android:layout_width="121dp"
                    android:layout_height="39dp"
                    android:layout_marginStart="56dp"
                    android:layout_marginLeft="56dp"
                    android:layout_marginTop="20dp"
                    android:gravity="center"
                    android:text="YES"
                    app:layout_constraintStart_toStartOf="parent"
                    app:layout_constraintTop_toBottomOf="@id/question5" />

                <Button
                    android:id="@+id/no5"
                    android:layout_width="121dp"
                    android:layout_height="39dp"
                    android:layout_marginTop="20dp"
                    android:layout_marginEnd="72dp"
                    android:layout_marginRight="72dp"
                    android:gravity="center"
                    android:text="NO"
                    app:layout_constraintEnd_toEndOf="parent"
                    app:layout_constraintTop_toBottomOf="@id/question5" />



            </androidx.constraintlayout.widget.ConstraintLayout>

        </LinearLayout>
    </ScrollView>

</androidx.constraintlayout.widget.ConstraintLayout>